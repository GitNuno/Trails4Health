@model IEnumerable<Trilho>
@{
    ViewData["Title"] = "Index";
}

@{
    Layout = "_LayoutTrilhoCRUD";
}

<br />
<br />
<br />

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.4.0/css/font-awesome.min.css" rel='stylesheet' type='text/css'>
<div style="width:90em; margin-left:0px !important">
    <div class="row">
        <div class="col-md-10 col-md-offset-1">

            <div class="panel panel-default panel-table">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col col-xs-6">
                            <h3 class="panel-title" style="text-align:justify">REGISTO <strong>TRILHOS</strong> </h3>
                        </div>
                        <div class="col col-xs-6 text-right">
                            <a asp-action="Criar" class="btn btn-sm btn-primary btn-create">Criar Trilho</a>
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    <table class="table table-striped table-bordered table-list">
                        <thead>
                            <tr align="center">
                                <!-- icon -->
                                <th><em class="fa fa-cog"></em></th>
                                <th>Nome</th>
                                <th>Inicio</th>
                                <th>Fim</th>
                                <th>Sumario</th>
                                <th>Detalhes</th>
                                <th>Distancia</th>
                                <th>Foto</th>
                                <th>Desativado</th>
                                <th>Dificuldade</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <!-- ICONS -->
                                <td align="justify">
                                    <a asp-action="Editar" asp-route-id="@item.TrilhoID" class="btn btn-default" style="margin-bottom:0.2em"><em class="fa fa-pencil"></em></a>
                                    <a asp-action="Delete" asp-route-id="@item.TrilhoID" class="btn btn-danger" style="margin-bottom:0.2em"><em class="fa fa-trash"></em></a>
                                    <a asp-action="Detalhes" asp-route-id="@item.TrilhoID" class="btn btn-default" style="margin-bottom:0.2em"><em class="glyphicon glyphicon-th-list"></em></a>
                                    @*<a class="btn btn-default" style="margin-bottom:0.2em"><em class="fa fa-pencil"></em></a>
                                    <a class="btn btn-danger" style="margin-bottom:0.2em"><em class="fa fa-trash"></em></a>
                                    <a class="btn btn-default list-group-item"><span class="glyphicon glyphicon-th-list" aria-hidden="true"></span></a>*@
                                </td>
                                <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                                <td>@Html.DisplayFor(modelItem => item.Inicio)</td>
                                <td>@Html.DisplayFor(modelItem => item.Fim)</td>
                                <td style="width:16em">
                                    @if (item.Sumario.Length > 151) // Sumario.Length(q está na BD) tem > que Remove(index)
                                    {
                                        @item.Sumario.Remove(150); <span>...</span>
                                    }
                                    else
                                    {
                                        @item.Sumario;
                                    }
                                </td>
                                <td style="width:16em">
                                    @if (item.Detalhes.Length > 151)
                                    {
                                        @item.Detalhes.Remove(150); <span>...</span>
                                    }
                                    else
                                    {
                                        @item.Detalhes;
                                    }
                                </td>
                                <td>@Html.DisplayFor(modelItem => item.Distancia) <span>Km</span></td>
                                <td>@Html.DisplayFor(modelItem => item.Foto)</td>
                                <td align="center">@Html.DisplayFor(modelItem => item.Desativado)</td>
                                <td align="center">@Html.DisplayFor(modelItem => item.Dificuldade.Nome)</td>
                            </tr>
                            }
                        </tbody>
                    </table>

                </div>
                <div class="panel-footer">
                    <div class="row">
                        <div class="col col-xs-4">
                            Page 1 of 5
                        </div>
                        <div class="col col-xs-8">
                            <ul class="pagination hidden-xs pull-right">
                                <li><a href="#">1</a></li>
                                <li><a href="#">2</a></li>
                                <li><a href="#">3</a></li>
                                <li><a href="#">4</a></li>
                                <li><a href="#">5</a></li>
                            </ul>
                            <ul class="pagination visible-xs pull-right">
                                <li><a href="#">«</a></li>
                                <li><a href="#">»</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>