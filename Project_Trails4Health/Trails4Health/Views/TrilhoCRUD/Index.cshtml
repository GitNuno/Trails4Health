@model IEnumerable<Trilho>
@{
    ViewData["Title"] = "Index";
}

@{
    Layout = "_LayoutTrilhoCRUD";
}

<br />
<br />
<br />

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.4.0/css/font-awesome.min.css" rel='stylesheet' type='text/css'>
<div style="width:90em; margin-left:0px !important">
    <div class="row">
        <div class="col-md-10 col-md-offset-1">

            <div class="panel panel-default panel-table">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col col-xs-6">
                            <h3 class="panel-title" style="text-align:justify">REGISTO <strong>TRILHOS</strong> </h3>
                        </div>
                        <div class="col col-xs-6 text-right">
                            <a asp-action="Criar" class="btn btn-sm btn-primary btn-create">Criar Trilho</a>
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    <table class="table table-striped table-bordered table-list">
                        <thead>
                            <tr align="center">
                                <!-- icon -->
                                <th><em class="fa fa-cog"></em></th>
                                <th>Nome</th>
                                <th>Inicio</th>
                                <th>Fim</th>
                                <th>Sumario</th>
                                <th>Detalhes</th>
                                <th>Distancia</th>
                                <th>Foto</th>
                                <th>Desativado</th>
                                <th>Dificuldade</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Trilho T in Model)
                            {
                                if (T.Desativado)
                                {
                                    <tr class="danger">
                                         @Html.Partial("TrilhoCRUDIndex", T)
                                    </tr>
                                }
                                else
                                {
                                    <tr>
                                        @Html.Partial("TrilhoCRUDIndex", T)
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>

                </div>
