@model ViewModelTrilho

@{
    ViewData["Title"] = "Detalhes";
}

@{
    Layout = "_LayoutBackOffice";
}

<br />
<br />

<hr />
<div class="text-uppercase panel-heading" style="margin-bottom:1em; font-size:large">
    Detalhes <strong style="margin-left:0.1em"> @Html.DisplayFor(model => model.TrilhoNome) </strong>
</div>
<hr />
<br />
<div>  
    <div class="row">
        <div class="col-lg-6">
            <img class="img-fluid mb-4 mb-lg-0" src="@Model.TrilhoFoto" alt="">
        </div>
    </div>
    <hr />
    <dl class="panel-heading">
        <dt>
            @Html.DisplayNameFor(model => model.TrilhoNome)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TrilhoNome)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.TrilhoInicio)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TrilhoInicio)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.TrilhoFim)
        </dt>
        <dd style="margin-bottom:1em">
            @Html.DisplayFor(model => model.TrilhoFim)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.TrilhoSumario)
        </dt>
        <!-- redimensionar coluna -->
        <dd style="width:66em;margin-bottom:1em">
            @Html.DisplayFor(model => model.TrilhoSumario)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.TrilhoDetalhes)
        </dt>
        <!-- redimensionar coluna -->
        <dd style="width:66em;margin-bottom:1em">
            @Html.DisplayFor(model => model.TrilhoDetalhes)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.TrilhoDistancia)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TrilhoDistancia) <span>Km</span>
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.TrilhoFoto)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TrilhoFoto)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.TrilhoDesativado)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TrilhoDesativado)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Dificuldade)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Dificuldade.Nome)
        </dd>
        @*<dt>
                @Html.DisplayNameFor(model => model.Estado.)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Dificuldade.DificuldadeID)
            </dd>*@
    </dl>
</div>
<div class="panel-heading">
    <table class="table table-striped table-bordered table-list ">
        <thead>
            <tr align="center">               
                <th>Estado</th>
                <th>Data Inicio</th>
                <th>Data Fim</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                @*<td>@Html.DisplayFor(modelItem => item.Nome)</td>*@
                <td></td>
                <td></td>
                <td></td>
            </tr>
            <tr>
                @*<td>@Html.DisplayFor(modelItem => item.Nome)</td>*@
                <td></td>
                <td></td>
                <td></td>
            </tr>
        </tbody>
    </table>

</div>

<div class="panel-heading" style="margin-top:2em">
    <a asp-action="Editar" asp-route-id="@Model.TrilhoID" class="btn btn-primary">Editar</a> |
    <a asp-action="Index" class="btn btn-danger">Voltar</a>
</div>
